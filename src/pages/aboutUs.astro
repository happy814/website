---
import Layout from "../layouts/Layout.astro";
import { aboutContent } from "../context/index.js";
import { paragraphContent } from "../context/index.js";
---

<Layout>
  <section
    class="mx-auto flex justify-center space-y-12 lg:max-w-7xl lg:space-y-0"
  >
    <!-- Main Flex Container -->
    <div
      class="relative left-5 flex flex-col md:top-36 lg:left-0"
    >
      <div class="absolute hidden md:flex">
        <img
          class="relative left-10 top-3 h-16 lg:left-28 lg:h-[88px]"
          src="/about/sCar.png"
          alt="sCar"
        />
        <img
          class="relative bottom-2 left-24 h-[88px] md:left-12 lg:left-24"
          src="/about/EllipseImg.png"
          alt="EllipseImg"
        />
        <div
          class="relative top-10 flex md:left-24 md:gap-10 lg:left-36 lg:gap-20"
        >
          {
            Array(5)
              .fill("")
              .map((_) => (
                <p class="text-gray-300">
                  {paragraphContent}
                </p>
              ))
          }
        </div>
      </div>

      <!-- About Section -->
      <div class="flex flex-col py-20 md:pr-16 lg:pl-20">
        <div class="hidden max-w-5xl lg:flex">
          <img
            class=""
            src="/about/bigLine.png"
            alt="bigLine"
          />
        </div>
        <div class="hidden max-w-2xl md:flex lg:hidden">
          <img src="/about/bigLine.png" alt="bigLine" />
        </div>
      </div>

      <div
        class="flex flex-col justify-center md:flex-row lg:space-x-20"
      >
        <!-- Left Column:About Text main  -->
        <div
          class="relative bottom-20 flex flex-col space-y-10 md:bottom-0 md:space-y-16"
        >
          <h1
            class="fonr-base text-5xl font-semibold text-white md:text-8xl lg:text-[150px] xl:text-[200px]"
          >
            ABOUT
          </h1>

          <!-- Text Blocks with Responsive Widths -->
          <div class="space-y-8">
            <div class="md:pr-28 lg:pl-20">
              <img
                class="pb-2"
                src="/about/line2.png"
                alt="line2"
              />
              <h2
                class="mb-6 text-xl font-semibold text-white md:text-2xl lg:text-4xl"
              >
                Our Vision
              </h2>
              {
                aboutContent.vision.map((paragraph) => (
                  <p class="font-base mb-5 text-base text-gray-300 lg:text-xl">
                    {paragraph}
                  </p>
                ))
              }
              {
                aboutContent.vision2.map((paragraph2) => (
                  <p class="font-base mb-5 text-base text-gray-300 lg:text-xl">
                    {paragraph2}
                  </p>
                ))
              }

              <div class="pt-10">
                <img
                  class="pb-2"
                  src="/about/line2.png"
                  alt="line2"
                />
                <h2
                  class="md mb-6 text-xl font-semibold text-white md:text-2xl lg:text-4xl"
                >
                  Our Mission
                </h2>
                {
                  aboutContent.mission.map((paragraph3) => (
                    <p class="fonr-base text-base text-gray-300 lg:text-xl">
                      {paragraph3}
                    </p>
                  ))
                }
              </div>
            </div>
          </div>
        </div>

        <!-- Right Column with Images -->
        <div
          class="relative flex flex-col items-center space-y-5 md:top-16 md:pr-0 lg:top-0"
        >
          <!-- Circle  -->
          <div class="relative lg:left-5">
            <div
              class="relative right-12 top-12 h-24 w-24 rounded-full bg-[#995BD9] md:right-16 md:top-28 md:h-40 md:w-40 lg:right-24 lg:top-40 lg:h-52 lg:w-52"
            >
            </div>
            <div
              class="absolute right-0 top-12 md:top-28 lg:top-40"
            >
              <div
                class="flex h-24 w-24 items-center justify-center rounded-full border-2 border-white md:h-40 md:w-40 lg:h-52 lg:w-52"
              >
                <div
                  class="absolute flex h-full w-full items-center justify-center"
                >
                  <!-- Center Image -->
                  <div
                    class="absolute left-12 top-1/2 z-20 flex h-12 w-12 -translate-x-1/2 -translate-y-1/2 transform items-center justify-center rounded-full bg-green-500 md:left-[105px] md:top-[85px] md:h-16 md:w-16 lg:left-28 lg:top-32 lg:h-[73.62px] lg:w-[73.62px]"
                  >
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Car Image Section -->
          <div
            class="relative bottom-28 z-30 flex select-none"
          >
            <img
              src="/about/bigCar.png"
              alt="bigCar Image"
              class="h-40 max-w-sm md:h-60 md:max-w-md lg:h-80"
            />
          </div>

          <div
            class="relative bottom-28 left-14 flex select-none flex-col md:left-20 md:items-end lg:left-28"
          >
            <img
              class="w-20 object-cover pb-2"
              src="/about/line2.png"
              alt="line2"
            />
            <h2
              class="mb-4 text-base font-semibold text-white md:text-center md:text-xl lg:text-2xl"
            >
              Our Drivers
            </h2>
          </div>

          <!-- memory Images Section -->
          <div
            class="relative bottom-36 flex flex-col md:bottom-20"
          >
            <div
              class="flex justify-between gap-4 md:gap-10 lg-xl:gap-20"
            >
              <img
                src="/about/bigFrame.png"
                alt="Driver 1"
                class="w-20 md:w-28 lg:w-[150.98px]"
              />
              <img
                src="/about/bigFrame.png"
                alt="Driver 2"
                class="relative top-6 w-20 md:top-16 md:w-28 lg:w-[150.98px]"
              />
            </div>
            <div
              class="relative left-1 flex justify-between gap-4 md:left-5 md:gap-10"
            >
              <img
                src="/about/bigFrame.png"
                alt="Driver 3"
                class="relative top-6 w-20 md:top-10 md:w-28 lg:w-[150.98px]"
              />
              <img
                src="/about/bigFrame.png"
                alt="Driver 4"
                class="relative top-10 w-20 md:top-28 md:w-28 lg:w-[150.98px]"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
